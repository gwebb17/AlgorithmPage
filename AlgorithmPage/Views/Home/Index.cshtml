@{
    ViewBag.Title = "Home Page";
}

<script src="~/Scripts/Methods.js"></script>

<div class="jumbotron">
    <h1 class="top-heading-text">Let's Test Out Our Algorithms!</h1>
    <p class="top-heading-subtext">Below you'll find my methods created to solve a variety of coding challenges. 
    Originally written in C#, they have been translated into JavaScript for the purpose of this project.</p>
</div>

<!--ROW 1-->
<div class="row row-one">
    <div class="col-md-4 col-one">
        <h2>Greatest common divisor challenge.</h2>
        <p class="p-gcd-method">
            Write a function that returns the greatest common divisor of two numbers. 
        </p>
        <!--BEGIN FORM COL1-->
        <form class="form-col-one">
            <div class="form-group">
                <label for="gcd-label-one">Enter # 1:</label>
                <input type="number" id="gcd-number-one" class="form-control gcd-form-control-one" />
            </div>

            <div class="form-group">
                <label for="gcd-label-two">Enter # 2:</label>
                <input type="number" id="gcd-number-two" class="form-control gcd-form-control-two" />
            </div>

            <button type="submit" class="btn btn-danger btn-col-one" onclick="GCDMethod()">Submit Answers</button>
            <!--having first "btn" in front of btn-danger gives the rounded corners/additional boilerplate formatting-->
        </form>
    </div>

    <!--COL 2 (ROW 1)-->
    <div class="col-md-4 col-two">
        <h2>Number Masking Method</h2>
        <p class="p-maskify-method">
            Write a function that obscures all but the final four digits of user input as #'s if there are more than 4 digits. (Like a credit card).    
        </p>
        <!--BEGIN FORM COL2-->
        <form class="form-col-two">
            <div class="form-group">
                <label for="maskify-label">Enter a series of digits to obscure.</label>
                <input type="number" id="maskify-input" class="form-control maskify-form-control" />
            </div>

            <button type="submit" class="btn btn-danger btn-col-two" onclick="MaskifyMethod()">Submit</button>
        </form>
    </div>
    
    <!--COL 3 (ROW 1)-->
    <div class="col-md-4 col-three">
        <h2>Palindrome Method</h2>
        <p class="p-palindrome-method">
            Write a function that tells you if the user input is a palindrome.
        </p>
        <!--BEGIN FORM COL3-->
        <form class="form-col-three">
            <div class="form-group">
                <label for="palindrome-label">Enter a sequence of characters.</label>
                <input type="text" id="palindrome-input" class="form-control palindrome-form-control" />
            </div>

            <button type="submit" class="btn btn-danger btn-col-three" onclick="PalindromeMethod()">Submit</button>
        </form>
    </div>
</div>
<!--END ROW 1-->

<!--BEGIN ROW 2-->
<div class="row row-two">
    <div class="col-md-4 col-four">
        <h2>
            The Collatz Conjecture. 
        </h2>
        <p class="p-collatz-method">
            Given a number N, if N is even perform N/2. Then if N is odd perform N * 3 + 1. Return the amount of steps it takes
            for N to = 1.
        </p>
        <!--BEGIN FORM COL4-->
        <form class="form-col-four">
            <div class="form-group">
                <label for="collatz-label">Enter a number greater than 0: </label>
                <input type="number" id="collatz-input" class="form-control collatz-form-control" />
            </div>

            <button type="submit" class="btn btn-danger btn-col-four" onclick="CollatzMethod()">Submit</button>
        </form>
    </div>
    <!--BEGIN COL 5-->
    <div class="col-md-4 col-five">
        <h2>
            Binary Number Equivalent.
        </h2>
        <p class="p-binary-method">
            Given a number base 10 whole number, return an array representing the number's binary (base 2) equivalent.
        </p>
        <!--BEGIN FORM COL5-->
        <form class="form-col-five">
            <div class="form-group">
                <label for="binary-label">Enter a whole number: </label>
                <input type="number" id="binary-input" class="form-control binary-form-control" />
            </div>

            <button type="submit" class="btn btn-danger btn-col-five" onclick="BinaryMethod()">Submit</button>
        </form>
    </div>
    <!--END COL 5-->
</div>